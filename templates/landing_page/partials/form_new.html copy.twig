{# Etape 2 #}
<div class="card step_2">
    <div class="card-content">
        <span class="card-title color_product_primary center-align">Étape 2</span>
        <p class="h6 center-align">Remplissez ce formulaire</p>
        <div class="form-wrapper">
        
            <div class="input-field">
                {{ form_widget(form.client.firstname) }}
                {{ form_label(form.client.firstname) }}
                {{ form_errors(form) }}
            </div>
            <div class="input-field">
                {{form_widget(form.client.lastname)}}
                {{ form_label(form.client.lastname) }}
                {{ form_errors(form) }}
            </div>
            <div class="input-field">
                {{form_widget(form.client.address)}}
                {{ form_label(form.client.address) }}
                {{ form_errors(form) }}
            </div>
            <div class="input-field">
                 {{form_widget(form.client.additional_address)}}
                {{ form_label(form.client.additional_address) }}
                {{ form_errors(form) }}
            </div>
            <div class="input-field">
                 {{form_widget(form.client.city)}}
                {{ form_label(form.client.city) }}
                {{ form_errors(form) }}
            </div>
            <div class="input-field">
                {{form_widget(form.client.postcode)}}
                {{ form_label(form.client.postcode) }}
                {{ form_errors(form) }}
            </div>
            <div class="input-field">
               {{form_widget(form.client.country)}}
                {{ form_label(form.client.country) }}
                {{ form_errors(form) }}
            </div>
            <div class="input-field">
                {{form_widget(form.client.phone)}}
                {{ form_label(form.client.phone) }}
                {{ form_errors(form) }}
            </div>
            <div class="input-field">
                {{form_widget(form.client.email)}}
